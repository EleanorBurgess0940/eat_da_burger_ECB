<h1>Can we take your order?</h1>
<div class="container">
    <div class="col-5 float-left">
        <div class="card">
            <h2>Burgers that are up for grabs!</h2>
        </div>
        <div class="card">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p>
                        {{burger_name}}
                    </p>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-5 float-left">
        <div class="card">
            <h2>Burgers that are devoured</h2>
        </div>
        <div class="card">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{ burger_name}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<h2>Add a Hamburger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bun">Burger Name:</label>
        <input type="text" id="bun" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>